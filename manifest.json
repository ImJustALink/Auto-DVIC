{
  "manifest_version": 3,
  "name": "Auto DVIC",
  "version": "1.1.6",
  "description": "Automates DVIC form filling and submission for Amazon Fleet Portal",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://logistics.amazon.com/fleet-management/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://logistics.amazon.com/*"
      ],
      "js": [
        "src/content/selectors.js",
        "src/content/issue-mappings.js",
        "src/content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "options_page": "src/onboarding/onboarding.html",
  "web_accessible_resources": [
    {
      "resources": [
        "src/vendor/*",
        "src/utils/*",
        "assets/pdf/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}